<html>
    <head>
        <title>pay with a star - Thanks!</title>
        <link rel="stylesheet" href="style.css">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <link href="https://fonts.googleapis.com/css?family=Assistant:200" rel="stylesheet">
    </head>
    <body>
        <div class="hero done">
            <img class="logo octocat" src="octocat.png"/>
            <img class="logo" src="logo.png"/>
            <div class="tagline">Thanks for the star!</div>
            <div class="subline">Taking you to <a id="url" href=""></a></div>
        </div>
        script(type='text/javascript').
            var redirect_url = location.search.split('=')[1];
            document.getElementById('url').textContent = redirect_url;
            document.getElementById('url').href = redirect_url;
            window.setTimeout(function() {
                window.location = redirect_url;
            }, 3000);
    </body>
</html>
